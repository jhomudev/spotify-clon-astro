---
import type { Playlist } from "@/lib/data"

interface Props {
  playlist: Playlist
}
const {
  playlist: { id, albumId, artists, color, cover, title },
} = Astro.props
const artistsString = artists.join(", ")
---

<li>
  <a
    href=`/playlist/${id}`
    class="playlist-item flex gap-3 items-center py-2 px-3 hover:bg-zinc-700 rounded-lg"
  >
    <picture class="aspect-square w-14 rounded-lg overflow-hidden">
      <img src={cover} alt={`Cover of ${title}`} />
    </picture>
    <div class="flex flex-col">
      <span class="truncate text-base font-normal">{title}</span>
      <small class="text-zinc-400 text-sm">{artistsString}</small>
    </div>
  </a>
</li>
